const fs = require('fs')

const jsonFile = 'package.json'
fs.readFile(jsonFile, 'utf8', function (err,data) {
    if (err) {
        console.log("sorry mate there's an ERRROR while reading your JSON file. :(");
    }
    let content = JSON.parse(data);
    let versionNumber = content.version.split(".")[2]
    console.log("your current version is " + content.version);
    versionNumber = Number(versionNumber);
    versionNumber += 1;
    let versionString = "0.0."+versionNumber
    console.log("updating to :" + versionString);
    //updating file
    content.version = versionString
    fs.writeFile(jsonFile, JSON.stringify(content), function(err) {
        if(err) {
            console.log("sorry mate there's an ERRROR while writing to your JSON file. :(");
        }
        console.log("The file was saved!");
    });
});